{
  "name": "Publication",
  "plural": "publications",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "preview": {
      "type": "string"
    },
    "content": {
      "type": "string",
      "required": true
    },
    "isPublished": {
      "type": "boolean",
      "index": true,
      "default": false
    },
    "publishedAt": {
      "type": "date"
    },
    "tags": {
      "type": "array",
      "default": [
        "PNL"
      ]
    },
    "account_id": {
      "type": "number",
      "required": true,
      "index": true
    },
    "account_type": {
      "type": "string",
      "required": true,
      "index": true
    }
  },
  "validations": [],
  "relations": {
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "polymorphic": {
        "foreignKey": "publication_id",
        "discriminator": "publication_type"
      }
    },
    "image": {
      "type": "hasOne",
      "model": "Image",
      "polymorphic": {
        "foreignKey": "imageable_id",
        "discriminator": "imageable_type"
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "property": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "property": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
