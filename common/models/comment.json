{
  "name": "Comment",
  "plural": "comments",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": true,
    "OwnId": true
  },
  "properties": {
    "content": {
      "type": "string",
      "required": true
    },
    "publisherName": {
      "type": "string",
      "required": true
    },
    "userId": {
      "type": "string",
      "index": true
    },
    "publicationId": {
      "type": "string",
      "index": true
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "AppUser",
      "foreignKey": "userId"
    },
    "publication": {
      "type": "belongsTo",
      "model": "Publication",
      "foreignKey": "publicationId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
